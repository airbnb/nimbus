{
  "private": true,
  "name": "nimbus-root",
  "version": "0.0.0",
  "scripts": {
    "setup": "tsc --build && beemo create-config eslint prettier",
    "build": "beemo typescript --build --reference-workspaces",
    "clean": "rm -rf packages/*/{lib,*.tsbuildinfo}",
    "test": "yarn run build && yarn run jest && yarn run lint",
    "lint": "beemo eslint .",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "prerelease": "yarn run clean && yarn run test",
    "release": "git reset --hard && beemo run-script auto-release"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:airbnb/nimbus.git"
  },
  "author": "Miles Johnson",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "beemo": {
    "module": "@airbnb/nimbus",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "ignore": [
        "*.config.js"
      ],
      "rules": {
        "import/prefer-default-export": "off"
      }
    },
    "prettier": {
      "ignore": [
        "*.ejs"
      ]
    },
    "typescript": {
      "exclude": [
        "*.test.ts"
      ]
    }
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "lerna": "^3.20.2"
  }
}
